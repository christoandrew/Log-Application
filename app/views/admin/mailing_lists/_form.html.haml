= form_for @mailing_list do |f|
  - if @mailing_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mailing_list.errors.count, "error")} prohibited this mailing_list from being saved:"
      %ul
        - @mailing_list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer
    = f.text_field :customer
  .actions
    = f.submit 'Save'
