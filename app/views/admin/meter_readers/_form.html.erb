<%= simple_form_for([:admin, @meter_reader]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :username %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
