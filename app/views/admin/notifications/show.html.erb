<div class="row">
  <div class="col-lg-12">
    <header class="panel-heading" style="margin-bottom: 30px;">
      Dashboard > Notifications
    </header>
    <div class="panel-body">
      <div class="tab-content tasi-tab">
        <div class="row">
          <div class="col-lg-8">
            <div class="panel">
              <div class="panel-body">
                <article class="media">
                  <div class="media-body">
                    <%= link_to @notification.title,{class: 'phead'} %>
                    <p class="pull-right">
                      <i class="icon_clock_alt"></i> <%= time_ago_in_words(@notification.created_at) %></p>
                    <p><%= @notification.text %></p>
                  </div>
                </article>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%= link_to 'Back', admin_notifications_path %>
    </div>
  </div>
</div>