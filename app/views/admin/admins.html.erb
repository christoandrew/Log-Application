<%= link_to 'New Admin', admin_new_path, {class: 'btn btn-primary pull-right', style: 'margin-bottom:30px;'} %>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading" style="margin-bottom: 30px;">
        Dashboard > Admins
      </header>
      <table class="table table-striped border-top" id="meter_readers_table">
        <thead>
        <th>Id</th>
        <th>Email</th>
        <th>Actions</th>
        </thead>
        <tbody>
        <% @admins.each do |admin| %>
            <tr class="odd gradeX">
              <td><%= admin.id %></td>
              <td><%= admin.email %></td>
              <td>
                <div class="btn-group">
                  <%= link_to edit_admin_registration_path(admin), {class: 'btn btn-info'} do %>
                      <i class="icon_pencil-edit_alt"></i>
                  <% end %>
                  <%= link_to show_admin_path(:id => admin.id), {class: 'btn btn-success'} do %>
                      <i class="icon_folder-open_alt"></i>
                  <% end %>
                  <%= link_to users_admin_path(admin),{class: 'btn btn-danger'}, data: {confirm: "Are you sure?"}, method: :delete do %>
                      <i class="icon_close_alt"></i>
                  <% end %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </section>

  </div>
</div>
<script>
  // begin second table
  $('#meter_readers_table').dataTable({
    "sDom": "<'row'<'col-sm-6'l><'col-sm-6'f>r>t<'row'<'col-sm-6'i><'col-sm-6'p>>",
    "sPaginationType": "bootstrap",
    "oLanguage": {
      "sLengthMenu": "_MENU_ per page",
      "oPaginate": {
        "sPrevious": "Prev",
        "sNext": "Next"
      }
    },
    "aoColumnDefs": [{
      'bSortable': false,
      'aTargets': [0]
    }]
  });
  jQuery('#meter_readers_table_table_wrapper').find('.dataTables_filter input').addClass("form-control"); // modify table search input
  jQuery('#meter_readers_table_table_wrapper').find('.dataTables_length select').addClass("form-control"); // modify table per page dropdown


</script>
