
<br/>
<h3 style="position:relative;left:25%;">Register Administrator</h3>
<br/>
<br/>
<div class="col-lg-6" style="position:relative;left:25%;">
  <%= simple_form_for(@admin, url: users_admin_index_path(@admin)) do |f| %>

      <%= f.text_field :email, {class: "form-control", placeholder: "Email", autocomplete: "off"} %>

      </br/>
      <%= f.password_field :password, required: true, class: "form-control", placeholder: "Password", autocomplete: "off" %>
      <br/>
      <%= f.password_field :password_confirmation, {required: true, class: "form-control", placeholder: "Confirm Password", autocomplete: "off"} %>
      <br/>
      <%= f.input :region_id, collection: Region.all, prompt: "Select Region" %>
      </br>
      <%= f.submit "Register", class: "btn btn-primary btn-lg btn-block" %>

  <% end %>
</div>
